<div id="signup" class="container text-center">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

          <div>
            <h3>Cadastre-se para comeÃ§ar a prever</h3>
          </div>

          <div class="signup-form">
            <i class="fa fa-keyboard-o  fa-5x"></i>


            <% if @new_user && @new_user.errors.any? %>
                <div class="error_messages">
                  <ul>
                    <% @new_user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <%= form_for @new_user, url: '/auth/identity/register', html: {class: "nifty_form"} do |u| %>

                <div class="row">
                  <div class="col-md-6 form-group input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <%= text_field_tag :first_name, @new_user.try(:first_name), class: 'form-control input-sm', placeholder: 'Nome' %>
                  </div>
                  <div class="col-md-6 form-group input-group">
                    <%= text_field_tag :last_name, @new_user.try(:last_name), class: 'form-control input-sm', placeholder: 'Sobrenome' %>
                  </div>
                </div>

                <div class="form-group input-group">
                  <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                  <%= text_field_tag :email, @new_user.try(:email), class: 'form-control input-sm', placeholder: 'Email' %>
                </div>

                <div class="row">
                  <div class="col-md-6 form-group input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <%= password_field_tag(:password, '', class: 'form-control input-sm', placeholder: 'Senha')%>
                  </div>
                  <div class="col-md-6 form-group input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <%= password_field_tag(:password_confirmation, '', class: 'form-control input-sm', placeholder: 'Confirme sua senha')%>
                  </div>
                </div>

                <%= submit_tag('Cadastrar', style: 'margin-bottom: 5px; width: 100%;', class: 'btn btn-primary') %>
            <% end %>

          </div>

    </div>
  </div>
</div>