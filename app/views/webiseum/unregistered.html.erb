<div id="unregistered" class="container text-center">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div >
          <h3>Seja bem-vindo a Webiseum!</h3>
        </div>

        <div class="unregistered-form">
            <i class="fa fa-chevron-right fa-5x"></i>

            <div class="social">
              <p class="text-muted">Conecte utilizando sua rede social preferida</p>
              <a href="/auth/facebook" class="btn btn-primary btn-lg" style="margin-bottom: 5px; background-color: #3b5998; border: 0px; width: 100%;"><i class="fa fa-facebook fa-lg"> Facebook</i></a>
              <a href="/auth/google_oauth2" class="btn btn-primary btn-lg" style="margin-bottom: 5px; background-color: #cb2027; border: 0px; width: 100%;"><i class="fa fa-google-plus fa-lg"> Google+</i></a>
            </div>
            <div class="mail">
                <%= form_tag "/auth/identity/callback" do %>
                    <p class="text-muted">Ou utilize seu e-mail pessoal</p>

                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="fa fa-globe"></i></span>
                        <%= text_field_tag(:auth_key, '', class: 'form-control input-sm', placeholder: 'E-mail')%>
                    </div>

                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <%= password_field_tag(:password, '', class: 'form-control input-sm', placeholder: 'Senha')%>
                    </div>

                    <%= submit_tag('Login', style: 'margin-bottom: 5px; width: 100%;', class: 'btn btn-primary') %>
                <% end %>
            </div>
            <p class="text-muted">NÃ£o possui um cadastro? <%= link_to "Crie um login", signup_path %> na Webiseum.</p>

        </div>

    </div>
  </div>
</div>