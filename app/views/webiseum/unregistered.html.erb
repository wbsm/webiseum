<div class="container" style="margin-top: 20px;">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

        <div class="panel panel-default ">
          <div class="panel-body">

            <div >
              <label>Preveja</label>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div>
                  <p>utilizando sua rede social preferida</p>
                  <a href="/auth/facebook" class="btn btn-primary btn-lg" style="margin-bottom: 5px; background-color: #3b5998; border: 0px; width: 100%;"><i class="fa fa-facebook fa-lg"> Facebook</i></a>
                  <a href="/auth/google_oauth2" class="btn btn-primary btn-lg" style="margin-bottom: 5px; background-color: #cb2027; border: 0px; width: 100%;"><i class="fa fa-google-plus fa-lg"> Google+</i></a>
                </div>
              </div>
              <div class="col-md-6">
                <%= form_tag "/auth/identity/callback" do %>
                    <p>utilizando seu e-mail pessoal</p>
                    <%= text_field_tag(:auth_key, '', style: 'margin-bottom: 5px;',class: 'form-control input-sm', placeholder: 'E-mail')%>
                    <%= password_field_tag(:password, '', style: 'margin-bottom: 5px;',class: 'form-control input-sm', placeholder: 'Senha')%>
                    <%= submit_tag('Login', style: 'margin-bottom: 5px; width: 100%;', class: 'btn btn-primary') %>
                <% end %>

                ou <%= link_to "crie um login", signup_path %> na Webiseum.
              </div>
            </div>

          </div>
        </div>
    </div>
  </div>
</div>