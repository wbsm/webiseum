<div id="unregistered" class="container">

  <div class="row">
    <div class="span6 offset3 text-center well well-sm">

        <div >
          <h3>Seja bem-vindo a Webiseum!</h3>
        </div>

        <div class="">
            <i class="fa fa-chevron-right fa-5x"></i>

            <div class="social-login">
              <p class="muted">Conecte utilizando sua rede social preferida</p>
              <a href="/auth/facebook" class="btn btn-link btn-large facebook"><i class="fa fa-facebook fa-lg"> Facebook</i></a>
              <a href="/auth/google_oauth2" class="btn btn-link btn-large google"><i class="fa fa-google-plus fa-lg"> Google+</i></a>
            </div>

            <div>
                <%= form_tag "/auth/identity/callback" do %>
                    <p class="muted">Ou utilize seu e-mail pessoal</p>

                    <div class="row">
                        <div class="span6 input-prepend">
                            <span class="add-on"><i class="fa fa-globe"></i></span>
                            <%= text_field_tag(:auth_key, '', placeholder: 'E-mail')%>
                        </div>

                        <div class="span6 input-prepend">
                            <span class="add-on"><i class="fa fa-lock"></i></span>
                            <%= password_field_tag(:password, '', placeholder: 'Senha')%>
                        </div>
                    </div>

                    <%= submit_tag('Login', style: 'width: 40%;', class: 'btn') %>
                <% end %>
            </div>
            <p class="muted">NÃ£o possui um cadastro? <%= link_to "Crie um login", signup_path %> na Webiseum.</p>

        </div>

    </div>
  </div>
</div>