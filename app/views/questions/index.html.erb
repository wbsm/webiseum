<div class="row">
  <div class="col-lg-6">
    <%= form_tag(search_questions_path, method: "get") do %>
      <div class="input-group">
        <span class="input-group-btn">
          <%= submit_tag "Buscar", :type => "submit", :class => "btn btn-default" %>
        </span>
        <input type="text" class="form-control" name="search_field">
      </div>
    <% end %>
  </div>
  
  <div class="col-lg-6">
    <div class="pull-right">
      <%= button_to "Nova Questão", { :action => "new" }, :class => "btn btn-default", :method => :get %>
    </div>
  </div>
</div>

</br>
<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Publicação</th>
      <th>Finalização</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.description %></td>
        <td><%= question.publish_at.nil? ? "" : question.publish_at.strftime("%d-%m-%Y %H:%M:%S") %></td>
        <td><%= question.finish_at.nil? ? "" : question.finish_at.strftime("%d-%m-%Y %H:%M:%S") %></td>
        <td><%= link_to 'Exibir', question %></td>
        <td><%= link_to 'Editar', edit_question_path(question) %></td>
        <td><%= link_to 'Excluir', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
