
<% if flash[:answer][:has_errors] %>
    $('div#match_forecast_<%=params["question_id"]%> span#match_response_<%=params["question_id"]%>').html('</br><%= flash[:answer][:message] %>');
<% elsif !flash[:answer][:has_errors] %>
    $('div#match_forecast_<%=params["question_id"]%>').css('display', 'none');
    $('div#match_forecast_<%=params["question_id"]%> span#match_response_<%=params["question_id"]%>').html('');
    $('div#rematch_forecast_<%=params["question_id"]%>').css('display', 'block');
    $('div#rematch_forecast_<%=params["question_id"]%> span#match_response_<%=params["question_id"]%>').html('<%= flash[:answer][:message] %>');
<% else %>
    $('div#match_forecast_<%=params["question_id"]%> span#match_response_<%=params["question_id"]%>').html('Erro inesperado...');
<% end %>