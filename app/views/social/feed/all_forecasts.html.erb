<% @forecasts.try(:each) {|f| %>

    <article>
      <div class="row">
        <div class="col-xs-10">
          <blockquote>
            <p><img class="media-object" style="width: 32px; display: inline;" src="https://app.divshot.com/img/placeholder-64x64.gif"><strong> <%= f.user.full_name %></strong> previu <em><%= f.answer %></em> para</p>
            <small><%= f.question.title %></small>
            <a href="#" class="btn btn-link pull-left">Prever <i class="icon-cloud-upload icon-large"></i></a>
          </blockquote>
        </div>
        <div class="col-xs-2">
          <a href="#">
            <img class="media-object" src="https://app.divshot.com/img/placeholder-64x64.gif">
          </a>
        </div>
      </div>
      <hr>
    </article>
<% } %>
